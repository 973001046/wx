/* pages/detail/detail.wxss */
.title{
  margin-top: 40rpx;
  color: #323232;
  font-size: 36rpx;
  line-height: 50rpx;
  margin: 40rpx 30rpx 20rpx;
}
.time{
  color: #969696;
  font-size: 26rpx;
  margin: 0 30rpx 30rpx;
}
.list{
  margin: 0 30rpx;
}
.list .left{
  float: left;
}
.list .right{
  float: right;
}
.list .center{
  float: left;
}
.list .left view,.list .right view,.list .center view{
  width: 185rpx;
  font-size: 28rpx;
  color: #646464;
  line-height: 36rpx;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 45rpx;
}
.list .left view{
  width: 205rpx;
}
.list .center{
  width: 165rpx;
}
.list .left view image,.list .right view image,.list .center view image{
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  left: 0;
}
.companey{
  margin-left: 30rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  padding: 24rpx 0;
}
.companey .left{
  width: 96rpx;
  height: 96rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  float: left;
}
.companey .left image{
  width: 96rpx;
  height: 96rpx;
}
.companey .right{
  float: left;
  margin-left: 10rpx;
  position: relative;
}
.companey .right .name{
  color: #323232;
  font-size: 30rpx;
  line-height: 52rpx;
  width: 520rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.companey .right .tip{
  color: #969696;
  font-size: 26rpx;
  width: 520rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.companey .right image{
  position: absolute;
  width: 20rpx;
  height: 32rpx;
  right: -50rpx;
  top: 30rpx;
}
.adress{
  line-height: 90rpx;
  position: relative;
  color: #646464;
  font-size: 28rpx;
  border-bottom: 20rpx solid #f6f7f8;
}
.adress image{
  position: absolute;
  width: 40rpx;
  height: 46rpx;
  left:26rpx;
  top:20rpx;
}
.adress text{
  display: block;
  width:640rpx;
  margin-left:70rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.descripation{
  margin: 30rpx;
  padding-bottom: 120rpx;
}
.descripation .head{
  color: #333;
  font-size: 35rpx;
  margin-bottom: 30rpx;
}
.descripation .content{
  color: #646464;
  font-size: 28rpx;
}
.descripation .content view{
  line-height: 45rpx;
}
.bottomBar{
  width: 100%;
  height: 120rpx;
  background-color: #bdd7ec;
  position: fixed;
  bottom: 0;
}
.bottomBar .collect,.bottomBar .share{
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  float: left;
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.bottomBar .collect{
  margin: 20rpx 40rpx 0 30rpx;
}
.bottomBar .collect image,.bottomBar .share image{
  width: 80rpx;
  height: 80rpx;
}
.bottomBar .collect .small{
  padding: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.bottomBar .btn{
  width: 450rpx;
  height: 80rpx;
  margin-top: 20rpx;
  background-color: #29a1ff;
  color: #fff;
  float: right;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 30rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
}
.bottomBar .point{
  pointer-events: none;
  background-color: #ddd;
  color: #eee;
}
.shadow{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,0.7);
}
.shadow .content{
  position: absolute;
  width: 560rpx;
  height: 330rpx;
  background-color: #fff;
  left: 50%;
  top: 50%;
  margin-left: -280rpx;
  margin-top: -165rpx;
  border-radius: 8rpx;
}
.shadow .content .title{
  color: #323232;
  font-size: 36rpx;
  text-align: center;
}
.shadow .content .tip{
  margin: 0 38rpx;
  font-size: 28rpx;
  color: #646464;
  text-align: center;
}
.shadow .content .double{
  text-align: center;
  margin-top: 40rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #eee;
}
.shadow .content .double .left{
  float: left;
  width: 279rpx;
  color: #646464;
  font-size: 36rpx;
  border-right: 1rpx solid #eee;
}
.shadow .content .double .right{
  float: right;
  width: 280rpx;
  color: #29a1ff;
  font-size: 36rpx;
}
.shareBg{
  position: fixed;
  background-color: rgba(0,0,0,0.7);
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  text-align: right;
}
.shareBg image{
  width:160px;
  height:70px;
  margin: 20rpx;
}