    }
}

var politics = function (id) {
  if (id == 1) {
    return '党员';
  } else if(id == 2) {
    return '非党员';
  } else{
    return '未填写';
  }
}

var edu = function (id) {
  if (id == 1) {
    return '大专';
  } else if (id == 2) {
    return '本科';
  } else if (id == 3) {
    return '研究生';
  } else if (id == 4) {
    return '博士';
  } else {
    return '未填写';
  }
}

