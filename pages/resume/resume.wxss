/* pages/resume/resume.wxss */
.userTop{
  width: 100%;
  height: 288rpx;
  position: relative;
  border-bottom: 20rpx solid #f6f7f8;
}
.userTop image{
  width: 100%;
  height: 288rpx;
}
.userTop .img{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 50%;
  margin-left: -70rpx;
  top: 50rpx;
  background-color: #fff;
  border-radius: 50%;
  border: 1rpx solid #29a1ff;
}
.userTop view{
  position: absolute;
  text-align: center;
  width: 100%;
  top: 210rpx;
  color: #969696;
  font-size: 32rpx;
}
.lists{
  border-bottom: 20rpx solid #f6f7f8;
}
.lists .title{
  line-height: 96rpx;
  position: relative;
}
.lists .title text{
  margin-left: 30rpx;
}
.lists image{
  position: absolute;
  color: #646464;
  font-size: 32rpx;
  width: 50rpx;
  height: 50rpx;
  right: 30rpx;
  top: 23rpx;
}
.lists .content{
  margin: 0 30rpx;
  color: #646464;
  font-size: 28rpx;
  border-top: 1rpx solid #f6f7f8; 
  
}
.lists .content .text{
  margin-top: 20rpx;
}
.lists .content .border{
  border-top: 1rpx dashed #f6f7f8;
  border-bottom: 1rpx dashed #f6f7f8;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
}
.lists .content>.text:last-child{
   padding-bottom: 30rpx; 
}
.progress{
  background-color: #e7edf4;
  height: 80rpx;
  position: relative;
}
.progress .left{
  position: absolute;
  left: 0;
  top: 0;
  line-height: 80rpx;
  width: 160rpx;
  text-align: right;
  font-size: 26rpx;
  color: #969696
}
.progress .right{
  position: absolute;
  line-height: 80rpx;
  width:110rpx;
  right: 0;
  top: 0;
  text-align: left;
  font-size: 26rpx;
  color: #969696
}
.progress .center{
  width: 440rpx;
  height: 12rpx;
  background-color: #bdd7ec;
  position: absolute;
  left: 185rpx;
  top: 50%;
  margin-top: -6rpx;
  overflow: hidden;
  border-radius: 6rpx;
}
.progress .center view{
  height: 12rpx;
  width: 200rpx;
  background-color: #29a1ff;
  border-radius: 6rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.content .each{
  border-bottom: 1rpx dashed #f6f7f8;
  margin: 20rpx 0;
}
.content .each:last-child{
  border-bottom: none;
}
.content .each view:last-child{
  margin-bottom: 20rpx;
} 
.content .each .time{
  color: #969696;
}
.content .each .time text{
  margin-right: 40rpx;
  color: #969696;
  font-size: 28rpx;
}
.content .each .text{
  color: #646464;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.content .each .description{
  margin-top: 20rpx;
  color: #969696;
  font-size: 28rpx;
}